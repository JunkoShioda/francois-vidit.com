{% embed 'partials/base.html.twig' %}

	{% block content %}
		{% if not page.header.breadcrumbs.enabled is same as(false) and config.plugins.breadcrumbs.enabled %}
			{% include 'partials/breadcrumbs.html.twig' %}
		{% endif %}
		
		<div id="item" class="blog-content-item grid pure-g-r" lang="{{ langswitcher.current }}">
			{% include 'partials/blog_item.html.twig' with {'blog':page.parent, 'truncate':false} %}
			
			{% if page.header.base64_background %}
			{% include 'partials/backgrounds/background-' ~ page.header.base64_background ~ '-svg.html.twig' %}
			{% include 'partials/backgrounds/background_base64-script.html.twig' %}
			{% endif %}
	{% endblock %}

{% endembed %}